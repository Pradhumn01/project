<h1>List of Properties</h1>
<%  @properties.each do |property| %>
<br>
<div class="card" style="width: 18rem;">
 <%= image_tag property.image if property.image %>
  <div class="card-body">
    <h5 class="card-title"> <%= property.title %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><b>Price(rs) :</b> <%= property.price %></li>
    <li class="list-group-item"><b>Property_size(sf) :</b>  <%= property.property_size %></li>
    <li class="list-group-item"><b>Deposit : </b> <%= property.deposit %></li>
  </ul>
  <div class="card-body">
   <%
=begin%>
 <button type="button" class="btn btn-info" ><%= link_to image_tag("https://img.icons8.com/material-rounded/30/000000/visible.png"),property_path(property)%></button> 
<%
=end%>
   <button type="button" class="btn btn-success">Intrested</button>
    <button type="button" class="btn btn-danger">NotIntrested</button>
   </div> 
</div>
<% end %>


